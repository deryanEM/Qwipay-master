<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include-->
    <!--layout="@layout/custom_toolbar"/>-->

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/logo_color"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"/>

    <View android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:background="@color/grey_400" />
    <com.example.baka57r.ezpy.utils.TextView_Lato
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <com.example.baka57r.ezpy.utils.TextView_Lato
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp. 20.0000,-"
        android:id="@+id/nominal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/grey_900"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"/>
    <View android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:background="@color/grey_400" />
    <com.example.baka57r.ezpy.utils.TextView_Lato
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kode Virtual Account Anda"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"/>

    <com.example.baka57r.ezpy.utils.TextView_Lato
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0838569964992"
        android:textSize="16sp"
        android:id="@+id/vitual_account"
        android:layout_marginLeft="20dp"
        android:textColor="@color/grey_900"
        android:layout_marginTop="5dp"/>

    <com.example.baka57r.ezpy.utils.TextView_Lato
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="8dp"/>

    <com.example.baka57r.ezpy.utils.TextView_Lato
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ardi Winata"
        android:textSize="16sp"
        android:id="@+id/nama_pembeli"
        android:layout_marginLeft="20dp"
        android:textColor="@color/grey_900"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"/>

    <View android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:background="@color/grey_400"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.example.baka57r.ezpy.utils.TextView_Lato
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:text="Tanggal"
                android:textColor="@color/grey_600"
                android:textSize="18sp"/>

            <com.example.baka57r.ezpy.utils.TextView_Lato
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:text="Status"
                android:textColor="@color/grey_600"
                android:textSize="18sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="vertical">

            <com.example.baka57r.ezpy.utils.TextView_Lato
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="50dp"
                android:text="20-9-2019 23:30"
                android:textColor="@color/grey_900"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                />

            <com.example.baka57r.ezpy.utils.TextView_Lato
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:minWidth="50dp"
                android:text="Pending"
                android:textColor="@color/orange"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <View android:layout_width="fill_parent"
        android:layout_height="1.5dip"
        android:background="@color/grey_400"/>


</LinearLayout>